# Morocco Made Real - Environment Configuration Template

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# ============ PHONE VERIFICATION SYSTEM ============
# SMS Provider Configuration
SMS_PROVIDER=auto                    # auto, sms, whatsapp, mock
PREFER_WHATSAPP=true                # Force WhatsApp for all users
WHATSAPP_METHOD=link                # link, qr, business-api, webhook

# Smart Country-Based Selection
HIGH_WHATSAPP_COUNTRIES=MA,EG,IN,BR,AR,MX,ES,IT
HIGH_SMS_COUNTRIES=US,CA,GB,DE,FR,NL,SE,NO,DK
ENABLE_SMART_METHOD_SELECTION=true

# SMS Fallback (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_NUMBER=+1234567890

# WhatsApp Business API (Optional - for Method 3)
WHATSAPP_BUSINESS_API_TOKEN=your-facebook-token
WHATSAPP_BUSINESS_PHONE_ID=your-phone-number-id

# WhatsApp Webhook Auto-Validation (Method 4)
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your-secure-webhook-token
WHATSAPP_WEBHOOK_URL=https://yourapp.com/api/whatsapp-webhook
ENABLE_AUTO_VALIDATION=true

# Development Settings
SHOW_VERIFICATION_CODES=true         # Show codes in UI for development
DEMO_PHONES=true                    # Enable demo phone numbers

# ============ BLOCKCHAIN CONFIGURATION ============
SMART_CONTRACT_ADDRESS=0x1234567890abcdef1234567890abcdef12345678
BLOCKCHAIN_PRIVATE_KEY=your_blockchain_private_key_here

# Etherscan V2 API Key (unified for all chains)
ETHERSCAN_API_KEY=your_etherscan_api_key_here
# Legacy support (will fallback to ETHERSCAN_API_KEY if not set)
POLYGONSCAN_API_KEY=your_polygonscan_api_key_here

BLOCKCHAIN_NETWORK_ID=polygon-amoy
POLYGON_RPC_URL=https://rpc-amoy.polygon.technology/

# Alternative Networks (choose one)
# POLYGON_RPC_URL=https://rpc-mumbai.maticvigil.com/ # Mumbai (deprecated)
# POLYGON_RPC_URL=https://polygon-amoy.g.alchemy.com/v2/YOUR_ALCHEMY_KEY # Enhanced RPC

# ============ SUPABASE CONFIGURATION ============
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Database Configuration (if using external PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/morocco_made_real

# ============ OTHER SERVICES ============
# IPFS Configuration
